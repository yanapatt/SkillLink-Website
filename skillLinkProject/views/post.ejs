<% if (post && post.length> 0) { %>
  <% post.forEach(p=> { %>
    <h1>Post Details</h1>
    <p><strong>Name:</strong>
      <%= p.postTitle %>
    </p>
    <p><strong>Author:</strong>
      <%= p.authorName %>
    </p>
    <p><strong>Author ID:</strong>
      <%= p.authorId %>
    </p>
    <p><strong>Description:</strong>
      <%= p.postDesc %>
    </p>
    <p><strong>Rating:</strong>
      <%= p.postRating || 0 %>
    </p>

    <% if (p.postImgUrl) { %>
      <img src="<%= p.postImgUrl %>" alt="Post Image" width="200" />
      <% } else { %>
        <p>No image available</p>
        <% } %>

          <form action="/posts/<%= p.postTitle %>/rate" method="POST">
            <input type="hidden" name="postTitle" value="<%= p.postTitle %>">
            <label>Rate this post:</label><br />
            <button type="submit" name="rating" value="1">1</button>
            <button type="submit" name="rating" value="2">2</button>
            <button type="submit" name="rating" value="3">3</button>
            <button type="submit" name="rating" value="4">4</button>
            <button type="submit" name="rating" value="5">5</button>
          </form>

          <% if (p.authorId===accId) { %>
            <a href="/view/<%= p.postTitle %>?action=edit">
              <button>Edit Post</button>
            </a>
            <form action="/remove-posts" method="POST"
              onsubmit="return confirm('Are you sure you want to delete this post?');">
              <input type="hidden" name="value" value="<%= p.postTitle %>" />
              <input type="hidden" name="action" value="byTitle">
              <button type="submit">Delete Post</button>
            </form>
            <% } %>

              <br /><a href="/">Back to Post List</a>
              <hr />
              <% }); %>
                <% } else { %>
                  <h1>Post Not Found</h1>
                  <a href="/">Back to Post List</a>
                  <% } %>