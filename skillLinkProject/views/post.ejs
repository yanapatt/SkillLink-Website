<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Post Details</title>
  <link rel="stylesheet" href="/styles/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>
  <div class="navbar-container">
    <div class="navbar-left">
      <a href="/" style="font-size: 20px">Skillink</a>
      <a href="#">Welcome <%= accUsername %>, Your Role is: <%= accRole %></a>
    </div>
    <a href="/logout">
      <button class="primary-outline-btn">Logout</button></a>
  </div>
  <div class="content">
    <div class="main-content">
      <div class="left-content">
        <% if (post && post.length> 0) { %>
          <% post.forEach(p=> { %>
            <h2>รายละเอียดโพสต์</h2>
            <p><strong>Name:</strong>
              <%= p.postTitle %>
            </p>
            <p><strong>Author:</strong>
              <%= p.authorName %>
            </p>
            <p><strong>Author ID:</strong>
              <%= p.authorId %>
            </p>
            <p><strong>Description:</strong>
              <%= p.postDesc %>
            </p>
            <p><strong>Rating:</strong>
              <%= p.postRating || 0 %>
            </p>
            <form action="/posts/<%= p.postTitle %>/rate" method="POST">
              <input type="hidden" name="postTitle" value="<%= p.postTitle %>">
              <p style="text-align: center;">Rate this post:</p>
              <div class="rating">
                <button class="star" type="submit" name="rating" value="1"><i class="fas fa-star"></i></button>
                <button class="star" type="submit" name="rating" value="2"><i class="fas fa-star"></i></button>
                <button class="star" type="submit" name="rating" value="3"><i class="fas fa-star"></i></button>
                <button class="star" type="submit" name="rating" value="4"><i class="fas fa-star"></i></button>
                <button class="star" type="submit" name="rating" value="5"><i class="fas fa-star"></i></button>
              </div>
            </form>

            <% if (p.authorId===accId) { %>
              <div class="admin-actions">
                <a href="/view/<%= p.postTitle %>?action=edit">
                  <button class="secondary-btn">Edit Post</button>
                </a>
                <form action="/remove-posts" method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this post?');">
                  <input type="hidden" name="value" value="<%= p.postTitle %>" />
                  <input type="hidden" name="action" value="byTitle">
                  <button type="submit" class="primary-btn">Delete Post</button>
                </form>
              </div>
              <% } %>
                <br /><a href="/">Back to Post List</a>
                <hr />
                <% }); %>
                  <% } else { %>
                    <h1>Post Not Found</h1>
                    <a href="/">Back to Post List</a>
                    <% } %>
      </div>
      <div class="right-content">
        <% if (post && post.length> 0) { %>
          <% post.forEach(p=> { %>
            <% if (p.postImgUrl) { %>
              <img src="<%= p.postImgUrl %>" alt="Post Image"
                style="width: 400px; height: 400px; border-radius: 20px; object-fit: cover;" />
              <% } else { %>
                <p>No image available</p>
                <% } %>
                  <% }); %>
                    <% } %>
      </div>
    </div>
  </div>
</body>

</html>

<script src="/js/main.js"></script>