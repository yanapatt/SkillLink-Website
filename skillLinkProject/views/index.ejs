  <div class="search-section">
    <h2>ค้นหาอาสาสมัครที่คุณต้องการได้เลย !</h2>
  Welcome <%= accUsername %>, Your Role is: <%= accRole %>
      
  
      <!-- Form for adding posts -->
      <form action="/add" method="POST" enctype="multipart/form-data">
        <input type="text" name="postTitle" placeholder="Post Title" required />
        <textarea name="postDesc" placeholder="Post Description" required></textarea>
        <input type="file" name="postImgUrl" accept="image/*" />
        <button class="btn5" type="submit">Add Post</button>
      </form>
    </div>
      <!-- Top 5 Rating Posts -->
      <div class="volunteer-section">
        <div class="volunteer-list">
      <h3 style="text-align: center;">5 อันดับอาสาสมัคร Rating สูง</h3>
      
      <ul class="volunteer-info">
        
        <% firstFivePosts.forEach(post=> { %>
          <li>

          
              <h3>
                <%= post.postTitle %>
                  <span>Rating: <%= post.postRating %></span>
                 <div class="btn3"> 
                  <span><a href="/view/<%= post.postTitle %>">View</a></span>
              </h3>
            
          </li>
          <% }); %>
      </ul>
    </div>
    </div>
  </div>
</div>
      <!-- Search Form -->
