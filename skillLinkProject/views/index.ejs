<script>
  // ฟังก์ชันที่ตรวจสอบว่าได้เลือก Checkbox หรือไม่
  const checkboxes = document.querySelectorAll('.post-checkbox');
  const deleteButton = document.getElementById('remove-button');

  // เช็คสถานะ Checkbox ทุกครั้งที่มีการเปลี่ยนแปลง
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', function () {
      // หากมีการเลือก Checkbox อย่างน้อย 1 ตัว ให้เปิดปุ่ม Delete
      if (Array.from(checkboxes).some(chk => chk.checked)) {
        deleteButton.disabled = false;
      } else {
        deleteButton.disabled = true;
      }
    });
  });

  // ตรวจสอบให้ปุ่ม Delete ถูก disabled ถ้าไม่มีการเลือกใดๆ
  document.addEventListener('DOMContentLoaded', function () {
    if (Array.from(checkboxes).every(chk => !chk.checked)) {
      deleteButton.disabled = true;
    }
  });
</script>