<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Post Reviews</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .summary {
      margin-bottom: 20px;
    }

    .review {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 10px;
    }

    .actions {
      margin-top: 20px;
    }

    .posts-list {
      margin-bottom: 20px;
    }
  </style>
</head>

<body>
  <h1>Post List</h1>
  Welcome <%= accUsername %>, Your Role is: <%= accRole %>
      <a href="/logout">Logout</a>

      <!-- Form for adding posts -->
      <form action="/add" method="POST" enctype="multipart/form-data">
        <input type="text" name="postTitle" placeholder="Post Title" required />
        <textarea name="postDesc" placeholder="Post Description" required></textarea>
        <input type="file" name="postImgUrl" accept="image/*" />
        <button type="submit">Add Post</button>
      </form>

      <!-- Top 5 Rating Posts -->
      <h2>Top 5 Rating Posts</h2>
      <ul>
        <% firstFivePosts.forEach(post=> { %>
          <li>
            <div class="post">
              <h3>
                <%= post.postTitle %>
                  <span>Rating: <%= post.postRating %></span>
                  <span><a href="/view/<%= post.postTitle %>">View</a></span>
              </h3>
            </div>
          </li>
          <% }); %>
      </ul>

      <!-- Search Form -->
      <form action="/search" method="POST">
        <input type="text" name="searchValue" placeholder="Search Posts" required />
        <label for="searchType">Select Search Type:</label>
        <select name="searchType" id="searchType">
          <option value="title">Search by Title</option>
          <option value="author">Search by Author</option>
        </select>
        <button type="submit">Search</button>
        <a href="/clear-search"><button type="button">Clear</button></a>
      </form>
      <!-- Sort by Rating Button -->
      <a href="/sort"><button>Sort by Rating</button></a>

      <form action="/my-posts" method="GET">
        <button type="submit">Get My Posts</button>
      </form>

      <!-- Display Posts Only if Not Admin -->
      <% if (accRole !=='Admin' ) { %>
        <div class="posts-list">
          <h2>Posts</h2>

          <% if (posts.length===0) { %>
            <p style="color: red; font-weight: bold;">Not Found!</p>
            <% } else { %>
              <ul>
                <% posts.forEach(post=> { %>
                  <li>
                    <strong>
                      <%= post.postTitle %>
                    </strong>: <%= post.postDesc %>
                      by <%= post.accUsername %> (Rating: <%= post.postRating || 0 %>)
                          <a href="/view/<%= post.postTitle %>">View</a>
                  </li>
                  <% }) %>
              </ul>
              <% } %>
        </div>
        <% } %>

          <!-- Display Admin Actions Only if accountType is 'Admin' -->
          <% if (accRole==='Admin' ) { %>
            <h2>Admin Actions</h2>
            <form action="/remove-multiple-posts" method="POST">

              <% if (posts.length===0) { %>
                <p style="color: red; font-weight: bold;">Not Found!</p>
                <% } else { %>
                  <ul>
                    <% posts.forEach(post=> { %>
                      <li>
                        <input type="checkbox" name="postTitles" value="<%= post.postTitle %>" class="post-checkbox" />
                        <strong>
                          <%= post.postTitle %>
                        </strong>: <%= post.postDesc %>
                          by <%= post.accUsername %> (Rating: <%= post.postRating || 0 %>)
                              <a href="/view/<%= post.postTitle %>">View</a>
                      </li>
                      <% }) %>
                  </ul>
                  <% } %>
                    <button type="submit" id="remove-button" disabled>Remove Selected Posts</button>

                    <label for="rating">Remove by Rating:</label>
                    <input type="number" id="rating" name="rating" min="0" max="5" step="0.1" value="0"
                      placeholder="Enter rating (0-5)" required>
                    <button type="submit" name="action" value="removeByRating">Remove by Rating</button>
            </form>

            <!-- Admin Form to Remove Oldest/Newest Post -->
            <form action="/remove-by-action" method="POST">
              <button type="submit" name="action" value="oldest">Remove Oldest Post</button>
            </form>

            <form action="/remove-by-action" method="POST">
              <button type="submit" name="action" value="newest">Remove Newest Post</button>
            </form>
            <% } %>
</body>

</html>

<script>
  // ฟังก์ชันที่ตรวจสอบว่าได้เลือก Checkbox หรือไม่
  const checkboxes = document.querySelectorAll('.post-checkbox');
  const deleteButton = document.getElementById('remove-button');

  // เช็คสถานะ Checkbox ทุกครั้งที่มีการเปลี่ยนแปลง
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', function () {
      // หากมีการเลือก Checkbox อย่างน้อย 1 ตัว ให้เปิดปุ่ม Delete
      if (Array.from(checkboxes).some(chk => chk.checked)) {
        deleteButton.disabled = false;
      } else {
        deleteButton.disabled = true;
      }
    });
  });

  // ตรวจสอบให้ปุ่ม Delete ถูก disabled ถ้าไม่มีการเลือกใดๆ
  document.addEventListener('DOMContentLoaded', function () {
    if (Array.from(checkboxes).every(chk => !chk.checked)) {
      deleteButton.disabled = true;
    }
  });
</script>