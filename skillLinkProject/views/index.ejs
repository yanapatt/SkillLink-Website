<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Post Reviews</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .summary {
      margin-bottom: 20px;
    }

    .review {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 10px;
    }

    .actions {
      margin-top: 20px;
    }

    .posts-list {
      margin-bottom: 20px;
    }
  </style>
</head>

<body>
  <h1>Post List</h1>
  Welcome <%= accUsername %>, Your Role is: <%= accRole %>
      <a href="/logout">Logout</a>

      <!-- Form for adding posts -->
      <form action="/add" method="POST" enctype="multipart/form-data">
        <input type="text" name="postTitle" placeholder="Post Title" required />
        <textarea name="postDesc" placeholder="Post Description" required></textarea>
        <input type="file" name="postImgUrl" accept="image/*" />
        <button type="submit">Add Post</button>
      </form>

      <!-- Top 5 Rating Posts -->
      <h2>Top 5 Rating Posts</h2>
      <ul>
        <% const topRatedPosts=posts.sort((a, b)=> b.rating - a.rating).slice(0, 5); %>
          <% topRatedPosts.forEach(post=> { %>
            <li>
              <strong>
                <%= posts.name %>
              </strong>: <%= post.description %> by <%= post.username %> (Rating: <%= post.rating || 0 %>) <a
                      href="/view/<%= post.name %>">View</a>
            </li>
            <% }) %>
      </ul>

      <!-- Search Form -->
      <form action="/search" method="POST">
        <input type="text" name="searchTerm" placeholder="Search Task" required />
        <label for="searchType">Select Search Type:</label>
        <select name="searchType" id="searchType">
          <option value="title">Search by Title</option>
          <option value="author">Search by Author</option>
        </select>
        <button type="submit">Search</button>
        <a href="/clear-search"><button type="button">Clear</button></a>
      </form>
      <!-- Sort by Rating Button -->
      <a href="/sort"><button>Sort by Rating</button></a>

      <!-- Display Posts Only if Not Admin -->
      <% if (accRole !=='Admin' ) { %>
        <div class="posts-list">
          <h2>Posts</h2>
          <ul>
            <% posts.forEach(post=> { %>
              <li>
                <strong>
                  <%= post.postTitle %>
                </strong>: <%= post.postDesc %> by <%= post.accUsername %> (Rating: <%= post.postRating || 0 %>) <a
                        href="/view/<%= post.name %>">View</a>
              </li>
              <% }) %>
          </ul>
        </div>
        <% } %>

          <!-- Display Admin Actions Only if accountType is 'Admin' -->
          <% if (accRole==='Admin' ) { %>
            <h2>Admin Actions</h2>
            <form action="/delete-multiple-posts" method="POST">
              <ul>
                <% if (posts.length > 0) { %>
                  <% posts.forEach(post=> { %>
                    <li>
                      <input type="checkbox" name="postTitles" value="<%= post.postTitle %>" class="post-checkbox" />
                      <strong>
                        <%= post.postTitle %>
                      </strong>: <%= post.postDesc %> by <%= post.accUsername %> (Rating: <%= post.postRating || 0 %>)
                    </li>
                    <% }) %>
                      <% } %>
              </ul>
              <button type="submit" id="delete-button" <%= posts.length === 0 ? 'disabled' : '' %>>Delete Selected Posts</button>

              <label for="rating">Remove by Rating:</label>
              <input type="number" id="rating" name="rating" min="0" max="5" step="0.1" value="0"
                placeholder="Enter rating (0-5)" required>

              <button type="submit" name="action" value="removeByRating">Remove by Rating</button>
            </form>

            <!-- Admin Form to Remove Oldest/Newest Post -->
            <form action="/remove-by-action" method="POST">
              <button type="submit" name="action" value="oldest">Remove Oldest Post</button>
            </form>

            <form action="/remove-by-action" method="POST">
              <button type="submit" name="action" value="newest">Remove Newest Post</button>
            </form>
            <% } %>

</body>

</html>