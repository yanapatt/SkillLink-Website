</div>
      <!-- Display Posts Only if Not Admin -->
      <% if (accRole !=='Admin' ) { %>
        <div class="search-section  ">
          
          <h2>Posts</h2>
          <div class="volunteer-info">
          <% if (posts.length===0) { %>
            <p style="color: red; font-weight: bold;">Not Found!</p>
            <% } else { %>
              <ul>
                <% posts.forEach(post=> { %>
                  <li>
                    <strong>
                      <%= post.postTitle %>
                    </strong>: <%= post.postDesc %>
                      by <%= post.accUsername %> (Rating: <%= post.postRating || 0 %>)
                          
                      <a href="/view/<%= post.postTitle %>"><button class="btn">View</button></a>
                  </li>
                  <% }) %>
              </ul>
              <% } %>
        </div>
        <% } %>
      </div>
          <!-- Display Admin Actions Only if accountType is 'Admin' -->
          <% if (accRole==='Admin' ) { %>
            <h2>Admin Actions</h2>
            <form action="/remove-multiple-posts" method="POST">

              <% if (posts.length===0) { %>
                <p style="color: red; font-weight: bold;">Not Found!</p>
                <% } else { %>
                  <ul>
                    <% posts.forEach(post=> { %>
                      <li>
                        <input type="checkbox" name="postTitles" value="<%= post.postTitle %>" class="post-checkbox" />
                        <strong>
                          <%= post.postTitle %>
                        </strong>: <%= post.postDesc %>
                          by <%= post.accUsername %> (Rating: <%= post.postRating || 0 %>)
                              <a href="/view/<%= post.postTitle %>">View</a>
                      </li>
                      <% }) %>
                  </ul>
                  <% } %>
                    <button class="btn5"  type="submit" id="remove-button" disabled>Remove Selected Posts</button>

                    <label  for="rating">Remove by Rating:</label>
                    <input type="number" id="rating" name="rating" min="0" max="5" step="0.1" value="0"
                      placeholder="Enter rating (0-5)" required>
                    <button class="btn" type="submit" name="action" value="removeByRating">Remove by Rating</button>
            </form>

            <!-- Admin Form to Remove Oldest/Newest Post -->
            <form action="/remove-by-action" method="POST">
              <button class="btn" type="submit" name="action" value="oldest">Remove Oldest Post</button>
            </form>

            <form action="/remove-by-action" method="POST">
              <button class="btn" type="submit" name="action" value="newest">Remove Newest Post</button>
            </form>
            <% } %>
