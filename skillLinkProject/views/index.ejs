<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Reviews</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .summary {
      margin-bottom: 20px;
    }

    .review {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 10px;
    }

    .actions {
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <h1>Post List</h1>
  Welcome user
  <a href="/logout">Logout</a>
  <form action="/add" method="POST" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Post Name" required />
    <textarea name="description" placeholder="Post Description" required></textarea>
    <label for="priority">Priority:</label>
    <select name="priority" id="priority">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="file" name="image" accept="image/*" />
    <button type="submit">Add Post</button>
  </form>

  <h2>Post Summary by Priority</h2>
  <ul>
    <% Object.keys(summary).forEach(priority=> { %>
      <li>Priority <%= priority %>: <%= summary[priority] %> posts</li>
      <% }) %>
  </ul>

  <!-- Search Task Form -->
  <form action="/search" method="POST">
    <input type="text" name="searchTerm" placeholder="Search Task" required />

    <!-- Dropdown สำหรับเลือกประเภทการค้นหา -->
    <label for="searchType">Select Search Type:</label>
    <select name="searchType" id="searchType">
      <option value="name">Search by Name</option>
      <option value="description">Search by Description</option>
    </select>

    <button type="submit">Search</button>
  </form>

  <!-- Sort Button -->
  <a href="/sort"><button>Sort by Priority</button></a>


  <form action="/delete" method="POST">
    <ul>
      <% posts.forEach(post=> { %>
        <li>
          <input type="checkbox" name="postNames" value="<%= post.name %>" />
          <strong>
            <%= post.name %>
          </strong>: <%= post.description %> by <%= post.username %> (Priority: <%= post.priority %>)
        </li>
        <a href="/view/<%= post.name %>">View</a>
        <% }) %>
    </ul>

    <!-- ปุ่ม Delete Selected Tasks -->
    <button type="submit">Delete Selected Tasks</button>

    <!-- Dropdown สำหรับเลือก Priority เพื่อทำการลบ -->
    <label for="prioritySelect">Remove by Priority:</label>
    <select name="priority" id="prioritySelect">
      <option value="1">1 (Highest Priority)</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5 (Lowest Priority)</option>
    </select>

    <!-- ปุ่ม Submit สำหรับ Remove by Priority -->
    <button type="submit" name="action" value="removeByPriority">Remove by Priority</button>
  </form>

  <form action="/delete-newest" method="POST">
    <button type="submit">Remove Newset Task</button>
  </form>
  <form action="/delete-oldest" method="POST">
    <button type="submit">Remove Oldest Task</button>
  </form>

</body>

</html>